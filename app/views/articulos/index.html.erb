<p id="notice"><%= notice %></p>

<h1>Listing Articulos</h1>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Escritor</th>
      <th>Contenido</th>
      <th>Imagen</th>
      <th>Noticia</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articulos.each do |articulo| %>
      <tr>
        <td><%= articulo.titulo %></td>
        <td><%= articulo.escritor %></td>
        <td><%= articulo.contenido %></td>
        <td><%= articulo.imagen %></td>
        <td><%= articulo.noticia %></td>
        <td><%= link_to 'Show', articulo %></td>
        <td><%= link_to 'Edit', edit_articulo_path(articulo) %></td>
        <td><%= link_to 'Destroy', articulo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

